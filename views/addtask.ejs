<body>
    <h3>Fill up form carefully!</h3>

    <form action=<%= type == "admin" ? "/createTask" : "/createTaskByEmployee" %> method="post">
        <input type="text" name="title" id="" placeholder="Title..."> <br>

        <textarea id="story" name="description" rows="5" cols="33" placeholder="Description..."></textarea> <br>
        <!-- <input type="textarea" name="description" id="" placeholder=""> <br> -->
        <input type="number" name="point" id="" placeholder="Project Point"> <br>
        <input type="number" name="eid" id="" placeholder="Employee ID"> <br>
        <input type="datetime-local" name="deadline" id="" placeholder="Deadline"> <br>
        <input type="submit" value="Add"> <br>
    </form>
</body>

</html>